-
  var values = [
    {
      title: "01 Clarity",
      desc: `We bring structure to complexity. <br class="hidden lg:block"> We speak plainly. We act deliberately.`
    },
    {
      title: "02 Discipline",
      desc: `We follow through. We avoid noise. <br class="hidden lg:block"> We move with focused intent.`
    },
    {
      title: "03 Commitment",
      desc: `We deliver completely. <br class="hidden lg:block"> Our promises are not conditional.`
    },
    {
      title: "04 Consideration",
      desc: `We think in decades. We build with care for people, for place, for time.`
    },
  ]


section.section
  .container
    .row
      div(class="flex flex-col")
        +heading("Our Values", "h5", "h5 mb-40 font-blue")
        +heading("What we hold to. What holds us.", "h2", "h2 m-0")
      div(class="mt-40 mt-lg-80 grid grid-cols-8 lg:grid-cols-12 lg:gap-x-10 gap-y-[48px] lg:gap-y-[56px]")
        each data in values
          div(class="flex flex-col col-span-8 lg:col-span-6 gap-6 lg:max-w-[480px]")
            +heading(data.title, "h4", "h4 image-text line line-image m-0 uppercase")
            +paragraph(data.desc, "body-extra-large m-0")

